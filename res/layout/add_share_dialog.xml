<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/spinner_companys_ticks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <AutoCompleteTextView 
        android:id="@+id/share_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinner_companys_ticks"
        android:ems="10"
        android:hint="@string/hint_type_share_company" >

        <requestFocus />
    </AutoCompleteTextView>

    <NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/share_edit_text"
        android:width="100dip" />

    <TextView
        android:id="@+id/share_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/number_picker"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/number_picker"
        android:layout_toLeftOf="@+id/number_picker"
        android:text="@string/share_add_info"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
