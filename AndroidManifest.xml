            android:name="com.feup.cmov.shareportfolio.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.feup.cmov.shareportfolio.SelectQuotesEvolution"
            android:label="@string/title_activity_select_quotes_evolution" >
