        <!-- SimpleXYPlotActivity -->
        <activity
            android:name="com.feup.cmov.shareportfolio.SimpleXYPlotActivity"
            android:label="@string/title_evolution_graph" >
        </activity>
        <activity
            android:name="com.feup.cmov.shareportfolio.SimplePieChartActivity"
            android:label="@string/title_activity_simple_pie_chart" >
        </activity>
    </application>

</manifest>
